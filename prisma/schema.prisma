// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Riders {
  id                 Int         @id @default(autoincrement())
  lastname           String      @db.VarChar(255)
  firstname          String      @db.VarChar(255)
  dateBirth          DateTime
  nationality        String      @db.VarChar(60)
  picture            String      @db.VarChar(255)
  number             Float
  networkTwitter     String      @db.VarChar(50)
  team               Teams       @relation(fields: [teamId], references: [id], onDelete: Cascade)
  teamId             Int
}

model Teams {
  id                 Int         @id @default(autoincrement())
  name               String      @db.VarChar(255)
  country            String      @db.VarChar(60)
  history            String?     @db.VarChar(255)
  jerseyPicture      String      @db.VarChar(255)
  riders             Riders[]
}

model Route {
  id                 Int         @id @default(autoincrement())
  stage              String      @db.VarChar(255)
  name               String      @db.VarChar(255)
  length             Float
  type               String      @db.VarChar(60)
  profilPicture      String      @db.VarChar(255)
  date               DateTime
}